<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#373737">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewResultado"
            android:textAlignment="viewEnd"
            android:textSize="48sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="@+id/tableLayout" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/buttonBorrar" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" android:textColor="#FFFFFF"
            android:background="#5A5A5A" android:text="0" android:height="65dip"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonBorrar" android:layout_margin="10dip"
            android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
            android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="C"
            android:textAlignment="center" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/textViewResultado"
            app:layout_constraintBottom_toBottomOf="@+id/textViewResultado"
            app:layout_constraintStart_toStartOf="@+id/tableLayout" android:backgroundTint="#FF9800"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dip"
            app:layout_constraintTop_toBottomOf="@+id/textViewResultado" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            android:layout_margin="20dip" android:id="@+id/tableLayout">

        <TableRow android:layout_width="281dp" android:layout_height="match_parent" android:layout_marginTop="10dip"
                  android:layout_marginBottom="10dip">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN1" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="1"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN2" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="2"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN3" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="3"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonSuma" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="+"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#FFC107"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="10dip" android:layout_marginBottom="10dip">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN4" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="4"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN5" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="5"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN6" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="6"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonResta" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="-"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#FFC107"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="10dip" android:layout_marginBottom="10dip">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN7" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="7"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN8" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="8"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN9" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="9"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonMultiplicar"
                    android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="*"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#FFC107"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="10dip" android:layout_marginBottom="10dip" android:layout_marginLeft="0px"
        >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonResultado" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="="
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#FF9800"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonN0" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="0"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#4CAF50"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonPunto" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="."
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#FFC107"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonDividir" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="70dip" android:height="50dip"
                    android:minHeight="70dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="/"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#FFC107"/>
        </TableRow>
    </TableLayout>
    <TableLayout
            android:layout_width="409dp"
            android:layout_height="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonA" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="A"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#8BC34A"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonF" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="F"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#8BC34A"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonE" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="E"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#8BC34A"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonD" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="D"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#8BC34A"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonB" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="B"
                    android:textAlignment="center" android:textSize="24sp"
                    android:backgroundTint="#8BC34A"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonC" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="C"
                    android:textAlignment="center" android:textSize="24sp" android:backgroundTint="#8BC34A"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonDecimal" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="D"
                    android:textAlignment="center" android:textSize="24sp"
                    android:backgroundTint="#FF5722"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonHexa"
                    app:layout_constraintTop_toTopOf="@+id/buttonHexa"
                    app:layout_constraintEnd_toStartOf="@+id/buttonHexa"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonHexa" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="H"
                    android:textAlignment="center" android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="@+id/buttonBinario"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonBinario"
                    app:layout_constraintEnd_toStartOf="@+id/buttonBinario"
                    android:backgroundTint="#FF5722"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonBinario" android:layout_margin="10dip"
                    android:maxWidth="90dip" android:minWidth="50dip" android:width="60dip" android:height="60dip"
                    android:minHeight="55dip" android:maxHeight="90dip" app:cornerRadius="50px" android:text="B"
                    android:textAlignment="center" android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="@+id/textViewResultado"
                    app:layout_constraintEnd_toStartOf="@+id/textViewResultado"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewResultado"
                    android:backgroundTint="#FF5722"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>